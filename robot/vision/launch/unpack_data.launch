<launch>
    <arg name="source"/>
    <arg name="out_name"/>

    <node pkg="rosbag" type="play" name="rosbag" required="true" args="$(arg source)"/>
    <node name="extract" pkg="image_view" type="video_recorder" respawn="false" 
          required="true" output="screen" args="filename:=/home/flo/data/$(arg out_name)_color">
        <remap from="image" to="/camera/color/image_raw"/>
    </node>
</launch>